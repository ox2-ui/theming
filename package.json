{
  "name": "@ox2/theming",
  "version": "1.0.0",
  "description": "Inject dynamic theme styles into page header.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ox2/theming"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run build:babel && npm run build:copy-files",
    "build-storybook": "build-storybook -s ./public",
    "build:babel": "babel ./src --ignore *.story.js,*.test.js --out-dir ./build",
    "build:copy-files": "babel-node ./scripts/copy-files.js",
    "clean:build": "rimraf build",
    "docs": "styleguidist server",
    "docs:build": "styleguidist build && npm run docs:copy-to-public",
    "docs:copy-to-public": "bash ./scripts/copy_docs.sh",
    "lint": "eslint src scripts && echo \"eslint: NO LINT ERRORS\"; exit 0",
    "prebuild": "npm run clean:build && npm run lint && npm run test",
    "prettier": "prettier --print-width 60 --single-quote --trailing-comma all --write \"{src,.storybook,scripts}/**/*.js\"",
    "storybook": "start-storybook -p 6006 -s ./public",
    "test": "jest",
    "test:update": "yarn test -- -u"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.35.3",
    "@kadira/storybook-addon-options": "^1.0.1",
    "@ox2/iframe": "^0.0.3",
    "@tapfuse/theme-spark": "^1.1.0",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "enzyme": "^2.7.1",
    "enzyme-to-json": "^1.4.5",
    "eslint": "^3.13.1",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^19.0.1",
    "eslint-plugin-react": "^6.9.0",
    "fs-extra": "^2.0.0",
    "jest-cli": "^19.0.2",
    "prettier": "^0.22.0",
    "react": "^15.4.2",
    "react-addons-shallow-compare": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-styleguidist": "^4.6.2",
    "react-test-renderer": "^15.4.2",
    "rimraf": "^2.5.3"
  },
  "main": "./index.js",
  "engines": {
    "npm": "^3.0.0"
  },
  "dependencies": {
    "jss": "^5.5.6"
  }
}
